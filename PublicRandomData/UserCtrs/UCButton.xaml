<UserControl x:Class="PublicRandomData.UserCtrs.UCButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PublicRandomData.UserCtrs"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Imgs/button_gb.png"/>
        </Grid.Background>
        <Border Height="20" VerticalAlignment="Bottom" Background="#77FF0000">
            <TextBlock Text="Button Title" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#fff"/>
        </Border>
    </Grid>
</UserControl>
